@model Nop.Plugin.Payments.Iyzico.Models.OpcCallbackConfirmModel
@{
    Layout = "";
}
<!doctype html>
<html lang="en">
<head>
    <title>Loading Page</title>
</head>
<body>
    <p>Loading Page ...</p>
    @if (Model.Warnings.Any())
    {
        <script type="text/javascript" asp-location="Footer">
            parent.OpcCallbackConfirm({
                success: false,
                errorMessages: @Html.Raw(Model.GetWarningsAsJson())
            });
        </script>
    }
    else
    {
        <script asp-location="Footer">
            parent.OpcCallbackConfirm({
                success: true,
                successUrl: "@Model.SuccessUrl"
            });
        </script>
    }
    @NopHtml.GenerateInlineScripts(ResourceLocation.Footer)
</body>
</html>